{% extends 'base.html.twig' %}

{% block title %}Inscription {% endblock %}

{% block body %}
    <h1>Inscription des nouveaux membres</h1>

    <div class="container">
        {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.email,{
            'label':'Adresse email : ','attr':{'placeholder':'Adresse email...'}}) }}
        {{ form_row(registrationForm.plainPassword,{
            'label':'Mot de passe : ','attr':{'placeholder':'°°°°°°°°'}}) }}
        {{ form_row(registrationForm.prenom,{
            'label':'Prénom : ','attr':{'placeholder':'Votre prénom...'}}) }}
        {{ form_row(registrationForm.nom,{
            'label':'Nom : ','attr':{'placeholder':'Votre nom...'}}) }}
        {{ form_row(registrationForm.telephone,{
            'label':'Téléphone : ','attr':{'placeholder':'Votre numéro de téléphone...'}}) }}
        {{ form_row(registrationForm.isActif,{'label':'Actif : '}) }}
        {{ form_row(registrationForm.isAdmin,{'label':'Admin : '}) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-success">Validation !</button>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
